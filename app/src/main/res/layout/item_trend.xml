<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    app:strokeColor="@color/md_theme_outlineVariant"
    app:cardCornerRadius="4dp">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">


            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/jamiroquai"
                android:id="@+id/img_trend"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_trend_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/md_theme_onSurface"
                android:text="John Maddel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_trend_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/md_theme_outline"
                android:text="Amercian Football\ncoach and commentator\n(1936-2021)"
                app:layout_constraintStart_toStartOf="@+id/txt_trend_title"
                app:layout_constraintTop_toBottomOf="@+id/txt_trend_title" />

            <TextView
                android:id="@+id/txt_trend_insight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+280 K"
                android:textColor="@color/green"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_trend_subtitle" />

            <TextView
                android:id="@+id/number_top"
                android:textColor="@color/md_theme_primary"
                android:background="@drawable/shape_circle"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="1"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>